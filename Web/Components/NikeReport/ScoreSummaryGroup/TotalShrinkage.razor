@inject Session session

@code {
    [Parameter] public ShrinkageRename shrinkage { get; set; } = new();
}

<table class="table table-striped table-sm" style="font-size: 12px;">
    <thead>
        <tr>
            <th scope="col">Shrinkage</th>
            <th scope="col">Percent</th>
        </tr>
    </thead>
    <tbody>
        <tr class="tableRow">
            <td>@shrinkage.ProcessFailure.Name</td>
            <td>@(shrinkage.ProcessFailure.Value)%</td>
        </tr>
        <tr class="tableRow">
            <td>@shrinkage.InternalTheft.Name</td>
            <td>@(shrinkage.InternalTheft.Value)%</td>
        </tr>
        <tr class="tableRow">
            <td>@shrinkage.ExternalTheft.Name</td>
            <td>@(shrinkage.ExternalTheft.Value)%</td>
        </tr>
        <tr class="tableRow">
            <td>@shrinkage.SupplierFraud.Name</td>
            <td>@(shrinkage.SupplierFraud.Value)%</td>
        </tr>
    </tbody>
</table>

<style>
    th {
        font-weight: bold;
    }
</style>