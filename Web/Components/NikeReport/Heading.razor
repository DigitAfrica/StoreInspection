
@code {
    [Parameter] public NikeForm report { get; set; }
}

<div class="mb-3">
    <table class="table table-striped table-sm" style="font-size: 14px;">
        <tbody>
            <tr class="tableRow">
                <th scope="row">Client</th>
                <td>@report.FHeader.Client</td>
                <td rowspan="7" style="text-align: center; font-size:180%; font-weight:bold">
                    Scorecard: <br />@(report.ScorePercent)%
                </td>
            </tr>
            <tr class="tableRow">
                <th scope="row">Store</th>
                <td>@report.FHeader.Store</td>
            </tr>
            <tr class="tableRow">
                <th scope="row">Audit type</th>
                <td>@report.FHeader.AuditType</td>
            </tr>
            <tr class="tableRow">
                <th scope="row">Date</th>
                <td>@report.FHeader.Date.ToString()</td>
            </tr>
            <tr class="tableRow">
                <th scope="row">Previous score</th>
                <td>@report.FHeader.PreviousScore</td>
            </tr>
            <tr class="tableRow">
                <th scope="row">Current shrinkage</th>
                <td>@report.ShrinkPercent</td>
            </tr>
            <tr class="tableRow">
                <th scope="row">Address</th>
                <td>@report.FHeader.Address</td>
            </tr>
        </tbody>
    </table>
</div> 
